<?xml version="1.0" encoding="UTF-8"?>
<element>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>ServerSideNew</display-name>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.assaf.yoni.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogInServlet</servlet-name>
        <servlet-class>com.assaf.yoni.controller.LogInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainPageUserServlet</servlet-name>
        <servlet-class>com.assaf.yoni.controller.MainPageUserServlet</servlet-class>
    </servlet>
   
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogInServlet</servlet-name>
        <url-pattern>/LogInServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainPageUserServlet</servlet-name>
        <url-pattern>/MainPageUserServlet</url-pattern>
    </servlet-mapping>
    
</web-app>
</element>